---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home | waseans">


	<section 
  class="relative py-24 px-4 sm:px-8 bg-white dark:bg-gray-950 overflow-hidden border border-gray-300 dark:border-gray-700 rounded-t-[20px] text-center sm:text-left"
>
  <!-- Grid SVG background -->
  <div class="absolute inset-0 z-0 pointer-events-none rounded-t-[20px]">
    <svg class="w-full h-full opacity-10 dark:opacity-5" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="gridPattern" width="40" height="40" patternUnits="userSpaceOnUse">
          <path d="M 40 0 L 0 0 0 40" fill="none" stroke="currentColor" stroke-width="0.5" />
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#gridPattern)" class="text-black dark:text-white" />
    </svg>
  </div>

  <!-- Vibrant Gradient Background -->
  <div class="absolute inset-0 z-0 bg-gradient-to-r from-pink-500 via-yellow-400 to-purple-600 opacity-60 dark:opacity-30 blur-2xl rounded-t-[20px]"></div>

  <!-- Soft Overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-white/85 via-white/60 to-white/90 dark:from-gray-950/80 dark:via-gray-950/60 dark:to-gray-950/90 backdrop-blur-md z-0 rounded-t-[20px]"></div>

  <!-- Content -->
  <div class="relative z-10 max-w-6xl mx-auto" data-aos="fade-up">
    <h1 class="text-4xl md:text-7xl font-extrabold text-gray-900 dark:text-white mb-12 text-center">
      All innovative solutions at one place
    </h1>

    <!-- ðŸ“¸ Image and Text Group -->
    <div class="flex flex-col md:flex-row items-center justify-center gap-8 mb-12">
      <!-- Circular Image -->
      <img 
        src="/images/my-img.jpg" 
        alt="Wase Ansari" 
        class="w-40 h-40 rounded-full border-2 border-gray-400 object-cover shadow-md"
      />

      <!-- Centered Text -->
      <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed max-w-xl md:self-center text-center md:text-left">
        Iâ€™m <span class="font-semibold text-black dark:text-white">Wase Ansari</span> â€” I craft seamless experiences through 
        <span class="font-semibold">app development (iOS/Android)</span>, 
        <span class="font-semibold">web development</span>, 
        <span class="font-semibold">UI/UX design</span>, and 
        <span class="font-semibold">AI-powered solutions</span>.
      </p>
    </div>

    <!-- Buttons -->
    <div class="flex flex-col sm:flex-row justify-center gap-4">
      <a 
        href="/projects" 
        class="border border-black text-black dark:text-white dark:border-white px-6 py-3 rounded-md text-base font-medium hover:bg-gray-100 dark:hover:bg-gray-800 transition"
      >
        View Projects
      </a>
      <a 
        href="/services" 
        class="bg-black text-white px-6 py-3 rounded-md text-base font-medium hover:opacity-90 transition"
      >
        Our Services
      </a>
    </div>
  </div>
</section>



	  
<section class="py-20 bg-white dark:bg-gray-950">

